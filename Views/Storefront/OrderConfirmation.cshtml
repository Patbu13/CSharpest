@using CSharpest.Classes
@model CSharpest.Classes.OrderPageModel

@{
    ViewBag.Title = "Order Confirmation";
}

<!-- CSS File Link-->
<link href="~/Content/OrderConfirmation.css" rel="stylesheet" type="text/css" />

<h1>Order Confirmation</h1>

<h2>Thank you for shopping at CSharpestStore! Your order details are below.</h2>

<!-- Print Out Order Table -->
<table class="table">
    <tr>
        <th>Name</th>
        <th>Quantity</th>
        <th>Price <br/>
            (/ oz)</th>
        <th>Total Price</th>
    </tr>

    @for (int i = 0; i < @Model.Items.Count(); i++)
    {
        <tr>
            <td>@Model.Items[i].Item.Name</td>
            <td>@Model.Items[i].Quantity</td>
            <td>@Model.Items[i].Item.Price</td>
            <td>@Model.Items[i].TotalPrice</td>
        </tr>
    }

    <tr>
        <td>Subtotal:</td>
        <td></td>
        <td></td>
        <td>@Model.Subtotal</td>
    </tr>
</table>

<a href="/Storefront/welcome">
    <h3 id="ReturnToStore">[Return to Store]</h3>
</a>



<!--Styling for Page-->
<style>

    body {
        background-color: #ececec;
    }

    /*"Title" main header*/
    h1 {
        text-align: center;
        font-family: Rockwell,Courier Bold,Courier,Georgia,Times,Times New Roman,serif;
        font-variant: small-caps;
        color: #142d4c;
    }

    /*Page Description*/
    h2 {
        font-family: Rockwell,Courier Bold,Courier,Georgia,Times,Times New Roman,serif;
        font-style: italic;
        font-variant: small-caps;
        margin-left: 150px;
        color: #385170;
    }

    /*Link to Checkout*/
    #GoToCheckout {
        padding: 50px;
        text-align: right;
        font-family: Rockwell,Courier Bold,Courier,Georgia,Times,Times New Roman,serif;
        color: #142d4c;
    }

    /*Link to Store*/
    #GoBackToStore {
        padding: 50px;
        text-align: left;
        font-family: Rockwell,Courier Bold,Courier,Georgia,Times,Times New Roman,serif;
        color: #142d4c;
    }

    #ReturnToStore {
        padding: 50px;
        text-align: left;
        font-family: Rockwell,Courier Bold,Courier,Georgia,Times,Times New Roman,serif;
        color: #142d4c;
    }

    /*Table header*/
    th {
        color: #142d4c;
    }

    /*Columns for Name and Price of items*/
    td:first-child, td:nth-child(3) {
        font-weight: bold
    }

    /* Each item*/
    td {
        text-align: center;
        padding: 10px;
        font-family: Palatino, "Palatino Linotype", "Palatino LT STD", "Book Antiqua", Georgia,serif;
        border-bottom: 1px solid #ddd;
    }

    /*Highlight item row when hovering*/
    tr:not(:first-child):hover {
        background-color: #9fd3c7;
    }

    /*Table formatting*/
    table {
        border: 2px solid black;
        font-family: Rockwell,Courier Bold,Courier,Georgia,Times,Times New Roman,serif;
        margin-left: auto;
        margin-right: auto;
        color: #385170;
    }

</style>

