@using CSharpest.Classes
@model CSharpest.Classes.WelcomePageModel

@{
    ViewBag.Title = "CSharpest Store";
}
<nav>

<h1><span>C</span>Sharpest Store!</h1>

<ul>
    <li class="Desc"><h3>Your one stop shop for sweets!</h3></li>

    <li>
        <a href="/Storefront/Checkout">
            <h3 id="GoToCheckout">Checkout</h3>
        </a>
    </li>

    <li><a href="/Storefront/cart">
        <h3 id="GoToCart">View Cart</h3>
        </a>
    </li>

</ul>

</nav>
<hr />
<body>

<h2>Shop Our Store's Current Inventory:</h2>
<p>Disclaimer: All products sold by the ounce (minimum purchase: 1 oz)</p>

<table class="table">
    <tr>
        <!-- Row headers -->
        <th>Name</th>
        <th>Description</th>
        <th>Price <br/>
            (/oz)</th>
        <th>Stock</th>
        <th>Sale</th>
        <th>Quantity (oz)</th>
        <th>Add to Cart</th>
    </tr>



    @foreach (var item in @Model.Items)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@item.Price.ToString("$0.00")</td>
            <td>@item.Stock</td>

            @if (@item.Bogo)
            {
                <td>
                    BOGO
                </td>
            }
            else
            {
                <td></td>
            }
                <!-- Display each item in their own row -->
            @using (Html.BeginForm("Welcome", "StorefrontController", FormMethod.Post))
            {
                <td>
                    <input type="number" id=@Model.Quantity name="Quantity" placeholder="# (oz)" min="0" />
                    <input type="hidden" id=@Model.CartId name="CartID" value=@Model.CartId />
                    <input type="hidden" id=@item.ItemId name="ItemID" value=@item.ItemId />
                </td>
                <td>
                    <input id="SubmitWelcome" type="submit" value="Add to Cart" />
                </td>
            }
        </tr>
    }
</table>
</body>

<hr />

<footer>
    <h1><span>C</span>Sharpest Store!</h1>
</footer>

<style>
    nav {
        background-color: #142d4c;
    }

    body {
        background-color: #ececec;
    }

    /*"Title" main header*/
    h1 {
        text-align: center;
        font-family: Rockwell;
        font-variant: small-caps;
        color: #ececec;
        line-height: 80%;
        font-size:250%;
    }

    /*For making C in CSharpest larger*/
    span {
        vertical-align: middle;
        font-size: 250%;
        line-height: 100%;
    }

    /*Header Links*/
    ul {
        list-style-type: none;
        margin: 0;
        padding: 0;
        overflow: hidden;
        font-family: Rockwell;
    }    

    /*All header bar objects*/
    li {
        font-family: Rockwell;
        font-size: 120%;
    }

    /* Text on left side of header */
    li.Desc {
        float: left;
        display: inline-block;
        text-align: center;
        padding: 8px 30px;
        text-decoration: none;
        font-family: Rockwell;
        color: #ececec;
        
    } 

    /*Interactables on right side of header*/
    a {
        float: right;
        display: inline-block;
        text-align: center;
        padding: 8px 30px;
        text-decoration: none;
        font-family: Rockwell;
        color: #ececec;
        transition-duration: 0.4s;

    }

    /*Show that buttons are interactable*/
    a:hover {
        background-color: #385170;
    }

    /*Page Description*/
    h2 {
        font-family: Rockwell;
        font-style: italic;
        font-variant: small-caps;
        text-align:center;
        color: #385170;
    }

    /*Disclaimer*/
    p {
        text-align:center;
        font-family: Rockwell;
        font-weight: bold;
        color: #385170;
    }

    /*Table header*/
    th {
        color: #142d4c;
    }

    /*Columns for Name and Price of items*/
    td:first-child, td:nth-child(3) {
        font-weight: bold
    }

    /* Each item*/
    td {
        text-align: center;
        padding: 10px;
        font-family: Palatino, "Palatino Linotype", "Palatino LT STD", "Book Antiqua", Georgia,serif;
        border-bottom: 1px solid #ddd;
    }

    /*Add to cart buttons*/
    button {
        font-family: Rockwell;
        color: #385170;
        font-weight: bold;
    }

    /*Placeholder text in quantity text boxes*/
    input::placeholder {
        font-family: Rockwell;
        color: #385170;
    }

    /*Highlight item row when hovering*/
    tr:not(:first-child):hover {
        background-color: #9fd3c7;
    }

    /*Table formatting*/
    table {
        border: 2px solid black;
        font-family: Rockwell;
        margin-left: auto;
        margin-right: auto;
        color: #385170;
    }

    footer {
        background-color: #142d4c;
    }

</style>
