    @foreach (var item in @Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <!-- <td>item.ItemId</td> -->
            <td>@item.Price</td>
            <td>@item.Stock</td>
            <td><input type="text" name="InputField" value="Quantity Needed (oz)" /></td>
            <td>
                <!-- Add in link to Add Item to Cart-->
                <button onclick="myFunction()">Add to Cart</button>
                
             </td>
