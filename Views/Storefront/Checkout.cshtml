@using CSharpest.Classes
@model CSharpest.Classes.CheckoutPageModel

@{
    ViewBag.Title = "Checkout";
}

<h1>CSharpest Store: Checkout Page</h1>

<a href="/Storefront/welcome">
    <h3>[Go to back to Store]</h3>
</a>

<hr/>

<table class="table">
    <tr>
        <th>Name</th>
        <th>Quantity</th>
        <th>Price <br/>
            (/ oz)</th>
        <th>Total Price</th>
    </tr>

    @for (int i = 0; i < @Model.Items.Count(); i++)
    {
        <tr>
            <td>@Model.Items[i].Item.Name</td>
            <td>@Model.Items[i].Quantity</td>
            <td>@Model.Items[i].Item.Price</td>
            <td>@Model.Items[i].TotalPrice</td>
        </tr>
    }
</table>

<hr/>

<p>Please Insert Card Information:</p>

<!-- Put this in BeginForm-->
<form>
    <label for="cardNumber">Card number:</label>
    <input type="text" id="cardNumber" name="cardNumber"><br><br>
    <label for="eMonth">Expiration Month:</label>
    <input type="text" id="eMonth" name="eMonth"><br><br>
    <label for="eYear">Expiration Year:</label>
    <input type="text" id="eYear" name="eYear"><br><br>
    <label for="cvv">CVV:</label>
    <input type="text" id="cvv" name="cvv"><br><br>
    <label for="cardName">Cardholder name:</label>
    <input type="text" id="cardName" name="cardName"><br><br>


    <input type="submit" value="Submit">
</form>

<hr />

<!-- Display These-->
<h3>Shipping Costs</h3>
<h3>Taxes</h3>
<hr />
<h3>Total Cost</h3>

<!-- Place Order Button -->
<a href="#" id="PlaceOrder">
    <h3>[Place Order]</h3>
</a>

<!-- Go Back to Cart Button-->
<a href="/Storefront/cart">
    <h3>[Go Back to Cart]</h3>
</a>

<style>

    body {
        background-color: #ececec;
    }

    /*"Title" main header*/
    h1 {
        text-align: center;
        font-family: Rockwell,Courier Bold,Courier,Georgia,Times,Times New Roman,serif;
        font-variant: small-caps;
        color: #142d4c;
    }

    /*Page Description*/
    h2 {
        font-family: Rockwell,Courier Bold,Courier,Georgia,Times,Times New Roman,serif;
        font-style: italic;
        font-variant: small-caps;
        margin-left: 100px;
        color: #385170;
    }


    /*Link to Store*/
    #GoBackToStore {
        padding: 50px;
        text-align: left;
        font-family: Rockwell,Courier Bold,Courier,Georgia,Times,Times New Roman,serif;
        color: #142d4c;
    }

    /*Link to Place Order*/
    #PlaceOrder {
        padding: 50px;
        text-align: right;
        font-family: Rockwell,Courier Bold,Courier,Georgia,Times,Times New Roman,serif;
        color: #142d4c;
    }

    /*Small Headers*/
    h3 {
        padding: 20px;
        text-align: left;
        font-family: Rockwell,Courier Bold,Courier,Georgia,Times,Times New Roman,serif;
        color: #142d4c;
    }

    /*Card Information Statement*/
    p {
        margin-left: 50px;
        font-family: Rockwell,Courier Bold,Courier,Georgia,Times,Times New Roman,serif;
        font-weight: bold;
        color: #385170;
    }

    /*Form*/
    form {
        margin-left: 50px;
        padding: 20px;
    }

    /*Table header*/
    th {
        color: #142d4c;
    }

    /*Columns for Name and Price of items*/
    td:first-child, td:nth-child(3) {
        font-weight: bold
    }

    /* Each item*/
    td {
        text-align: center;
        padding: 10px;
        font-family: Palatino, "Palatino Linotype", "Palatino LT STD", "Book Antiqua", Georgia,serif;
        border-bottom: 1px solid #ddd;
    }

    /*Highlight item row when hovering*/
    tr:not(:first-child):hover {
        background-color: #9fd3c7;
    }

    /*Table formatting*/
    table {
        border: 2px solid black;
        font-family: Rockwell,Courier Bold,Courier,Georgia,Times,Times New Roman,serif;
        margin-left: auto;
        margin-right: auto;
        color: #385170;
    }

</style>
