<!--Loading dictionary list from Cart-->
@model Dictionary<CSharpest.Classes.Item, Tuple<int, decimal>>

@{
    ViewBag.Title = "Your Cart";
}

<a href="/Storefront/welcome">
    <h3 id="GoBackToStore">[Go to back to Store]</h3>
</a>

<h1>CSharpest Store: Your Cart</h1>

<table class="table">
    <tr>
        <th>Name</th>
        <th>Quantity</th>
        <th>Price by Ounce</th>
        <th>Total Price</th>
    </tr>

    @foreach (CSharpest.Classes.Item, KeyValuePair<Tuple<int, decimal>> item in @Model)
    {
        <tr>
             <td>@item.Key.Name</td>
             <td>@item.Value.Item1</td>
             <td>@item.Key.Price</td>
             <td>@item.Value.Item2</td>
         </tr>
    }
</table>




<a href="/Storefront/checkout">
    <h3 id="GoToCheckout">[Go to Checkout]</h3>
</a>

<style>
    h1 {text-align:center;}
    .GoBackToStore {text-align:left;}

    .GoToCheckout {
        text-align: right;
    }

    table {
        border: 2px solid black;
        font-family: Rockwell,Courier Bold,Courier,Georgia,Times,Times New Roman,serif;
        margin-left: auto;
        margin-right: auto;
        color: #385170;
    }
</style>
